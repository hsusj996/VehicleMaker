<UserControl x:Class="VehicleMakerUI.UI.TestUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1920">
    <Grid Height="900" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.874"/>
                <GradientStop Color="#FF556BE8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DockPanel LastChildFill="False" Grid.Column="1" Margin="10,0,0,10"/>
        <DockPanel LastChildFill="False" Grid.Column="2">
            <Image Source="pack://application:,,,/Properties/Test/test_Test.jpg" Stretch="Uniform" Height="790" Width="640"/>
        </DockPanel>
        <Image Source="pack://application:,,,/Properties/Test/test_Run.jpg" Stretch="Uniform" Margin="0,10,0,8" Grid.Column="1"/>
        <Button x:Name="btnRun" Content="RUN" Margin="202,31,192,32" Grid.Row="1" FontSize="24" Click="btnRun_Click" Grid.Column="1"/>
        <Button x:Name="btnTest" Content="TEST" Margin="200,32,200,31" Grid.Row="1" FontSize="24" Click="btnTest_Click" Grid.Column="2"/>
        <DockPanel LastChildFill="False">
            <Image Source="pack://application:,,,/Properties/Test/test_reset.jpg" Stretch="Uniform" Width="639"/>
        </DockPanel>
        <Button x:Name="btnReset" Content="RESET" FontSize="24" Margin="200,31,200,31" Grid.Row="1" Click="btnReset_Click"/>

    </Grid>
</UserControl>

<UserControl x:Class="VehicleMakerUI.UI.TestResultUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="250" Width="400" >
    <Grid>
        <StackPanel x:Name="MainPanel" HorizontalAlignment="Center" VerticalAlignment="Center">

            <ProgressBar x:Name="LoadingBar" Width="200" Height="20"
                         IsIndeterminate="True" Visibility="Visible"/>

            <TextBlock x:Name="ResultText" FontSize="30"
                       TextAlignment="Center"
                       Margin="20" Visibility="Collapsed" Foreground="White"
                       TextWrapping="Wrap" />
        </StackPanel>
        <Button Content="Back to the beginning..." Margin="64,220,64,0" Click="Button_Click"/>

    </Grid>
</UserControl>